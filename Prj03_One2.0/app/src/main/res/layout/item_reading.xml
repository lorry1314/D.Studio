<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_time"
                android:padding="5dp"
                android:textColor="@color/contentColor"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c9c9c9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:id="@+id/item_essay">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 短篇"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_format_align_left_black_24dp"
                    android:textColor="#8c8c8c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hp_title"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/contentColor"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hp_author"
                    android:textSize="13sp"
                    android:textColor="@color/contentColor"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:lineSpacingExtra="5sp"
                    android:id="@+id/guide_word"
                    android:textSize="13sp"
                    android:textColor="@color/contentColor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_question"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 问答"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_insert_comment_black_24dp"
                    android:textColor="#8c8c8c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/question_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/contentColor"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_title"
                    android:textSize="13sp"
                    android:textColor="@color/contentColor"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:lineSpacingExtra="5sp"
                    android:textSize="13sp"
                    android:textColor="@color/contentColor"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
